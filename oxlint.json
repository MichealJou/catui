{
  "categories": {
    "correctness": "warn",
    "suspicious": "warn",
    "perf": "warn",
    "style": "warn",
    "restriction": "off"
  },
  "javascript": {
    "eslint-comments": "off",
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error"
  },
  "typescript": {
    "no-explicit-any": "warn",
    "no-unused-vars": "warn"
  },
  "vue": {
    "vue/multi-word-component-names": "error",
    "vue/no-v-html": "warn",
    "vue/require-default-prop": "off",
    "vue/require-prop-types": "off"
  },
  "ignore": [
    "node_modules/**",
    "dist/**",
    "packages/canvas-table/**",
    "build/**",
    "*.config.js",
    "*.config.ts"
  ]
}
